<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApps" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_gray_800</item>
        <item name="colorPrimaryVariant">@color/blue_gray_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_a700</item>
        <item name="colorSecondaryVariant">@color/green_a400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_gray_900</item>
        <!-- Customize your theme here. -->
        <item name="android:actionOverflowButtonStyle">@style/ActionIcon</item>
    </style>

    <style name="ActionIcon" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_baseline_sort_24</item>
        <item name="android:contentDescription">"Sort Menu"</item>
    </style>
</resources>